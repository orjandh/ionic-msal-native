{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src",
    "target": "es2015",
    "skipLibCheck": true,
    "lib": ["es2018", "dom"],
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "plugins": [{ "name": "typescript-tslint-plugin" }]
}
